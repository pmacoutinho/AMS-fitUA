<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textKcalKg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/kcal"
                    app:layout_constraintStart_toEndOf="@+id/textCaloriasPeso"
                    app:layout_constraintTop_toBottomOf="@+id/textTempo" />

                <TextView
                    android:id="@+id/textMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/min"
                    app:layout_constraintStart_toEndOf="@+id/textTempo"
                    app:layout_constraintTop_toBottomOf="@+id/textTitulo" />

                <TextView
                    android:id="@+id/textCaloriasPesoMANUAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/my_row_tempo"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textTipoExercicio"
                    app:layout_constraintTop_toBottomOf="@+id/textTitulo" />

                <TextView
                    android:id="@+id/textTempoMANUAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/my_row_tempo"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textTipoExercicio"
                    app:layout_constraintTop_toBottomOf="@+id/textTitulo" />

                <TextView
                    android:id="@+id/textTipoExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/my_row_cardio"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.244" />

                <TextView
                    android:id="@+id/textTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/my_row_titulo"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textTipoExercicio"
                    app:layout_constraintTop_toTopOf="@+id/textTipoExercicio" />

                <TextView
                    android:id="@+id/textTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/my_row_tempo"
                    app:layout_constraintStart_toEndOf="@+id/textTempoMANUAL"
                    app:layout_constraintTop_toBottomOf="@+id/textTitulo" />

                <TextView
                    android:id="@+id/textCaloriasPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/my_row_calorias_peso"
                    app:layout_constraintStart_toEndOf="@+id/textCaloriasPesoMANUAL"
                    app:layout_constraintTop_toBottomOf="@+id/textTempo" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>